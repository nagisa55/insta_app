	<p>
	　<%= image_tag @micropost.picture.url if @micropost.picture? %>
	</p>
	<p>
		<%= @micropost.content %>    
	</p> 

	<% @comments.each do |comment| %>
		<%= comment.user.username %>
		<%= comment.comment_content %>
		<% end %>

