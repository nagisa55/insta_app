	<p>
	　<%= image_tag @micropost.picture.url if @micropost.picture? %>
	</p>
	<p>
		<%= @micropost.content %>    
	</p> 
		<%= time_ago_in_words(@micropost.created_at) %> ago.
		<div id="like-btn-<%= @micropost.id %>">
			<%= render partial: 'favorites/favorite', locals:{ micropost: @micropost }%>
		</div>	
		<% if logged_in? && current_user.id == @micropost.user_id %>　
		<div>
			<%= link_to "delete", @micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
		</div>	
		<% end %>

	<% @comments.each do |comment| %>
		<%= comment.user.username %>
		<%= comment.comment_content %>
		<% end %>

	<%= form_with(model:[@micropost, @comment], local: true) do |f| %>
		<%= f.text_field :comment_content %>
		<br>
		<%= f.submit 'コメントする' %>
	<% end %>
	
	
	<%= link_to "一覧に戻る", user_path(@user) %>

	