<% provide(:title, '投稿写真') %>
<!--投稿写真詳細-->
<div>
　<%= image_tag @micropost.picture.url if @micropost.picture? %>
</div>
<div>
  <%= @micropost.content %>    
<div> 
  <%= time_ago_in_words(@micropost.created_at) %> ago.

  <!--お気に入りボタン--> 
  <%= render "favorites/favorite", micropost: @micropost %>
  
  　<!--削除ボタン表示-->
    <% if logged_in? && current_user.id == @micropost.user_id %>　
      <div>
        <%= link_to "delete", @micropost, method: :delete, data: { confirm: "本当に削除しますか？" } %>
      </div>  
    <% end %>

  <!--コメント一覧-->
    <% @comments.each do |comment| %>
      <%= comment.user.username %>
      <%= comment.comment_content %>
    <% end %>

      <%= form_with(model:[@micropost, @comment], local: true) do |f| %>
        <%= f.text_field :comment_content %>
        <br>
        <%= f.submit 'コメントする' %>
      <% end %>

<%= link_to "一覧に戻る", user_path(@user) %>
