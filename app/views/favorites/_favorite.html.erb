<% if !current_user?(micropost.user) %>
	<% if micropost.liked_by?(current_user) %>
	<%= link_to(micropost_favorites_path(micropost), method: :delete, remote: true, id: :"like-button-#{micropost.id}") do %>
			<i class= "far fa-heart fa-lg icon-btn like"></i>
		<% end %>
	<% else %>
		<%= link_to(micropost_favorites_path(micropost), method: :post, remote: true, id: :"like-button-#{micropost.id}") do %>
			<i class= "far fa-heart fa-lg icon-btn not-like"></i>
		<% end %> 
	<% end %>
<% end %>